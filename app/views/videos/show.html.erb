<%= stylesheet_link_tag  "model", :media => "all" %>
<%= stylesheet_link_tag  "model_1", :media => "all" %>
<%= stylesheet_link_tag  "media_play", :media => "all" %>
<%= javascript_include_tag "v4" %>
<style>
	#playshow_mask{
		display:none;
		width:100%;
		height:100%;
		filter:alpha(opacity=100);
		opacity:1.0;
		z-index:99;
		background-color:#101010;
		position:fixed;
		_position:absolute;
		top:0;
		left:0;
	}
	.playArea {
		position:relative;
		z-index:1000;
		margin: 0 auto;
	}
	.content{
		margin-right:20px;
		text-align:center;
	}
</style>
<% provide :title, "视频中心 | "+@video.name %>
<div id="body">
	<div class="inner_body">
		<%= render 'head_body' %>
		<div class="left_body">
			<div class="content">
				<div class="title">
					<%= @video.name %>
				</div>
				<p class="playArea">
					<embed type="application/x-shockwave-flash" src="http://static.youku.com/v1.0.0155/v/swf/player.swf?VideoIDS=<%= @video.video_id %>" width="600" height="400" id="movie_player" name="movie_player" bgcolor="#FFFFFF" quality="high" allowfullscreen="true" wmode="opaque" allowscriptaccess="always" flashvars="showAd=0&winType=interior&Cp=0&Light=on&THX=&Tid=0&Version=/v1.0.0662&show_ce=1&isAutoPlay=true" pluginspage="http://www.macromedia.com/go/getflashplayer" />
				</p>
				<div id="playshow_mask" style="display: none; opacity: -0.05; ">
					<div class="light_switch">
					<a href="javascript:;" onClick="Light.turn();"></a>
					</div>
				</div> 
				<div class="media_counter">
					发布时间：<%= @video.created_at.strftime("%Y年%m月%d日") %>&nbsp;&nbsp;&nbsp;&nbsp;播放：<%= @video.views_count_s %>次
				</div>
			</div>
		</div>
		<%= render 'right_body' %>
		<div class="Clear"></div>
	</div>
</div>