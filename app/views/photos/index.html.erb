<%= stylesheet_link_tag  "model", :media => "all" %>
<%= stylesheet_link_tag  "model_1", :media => "all" %>
<%= stylesheet_link_tag  "photos", :media => "all" %>
<%= stylesheet_link_tag  "jquery.fancybox-1.3.4", :media => "all" %>
<%= javascript_include_tag "photos" %>
<%= javascript_include_tag "jquery.mousewheel-3.0.4.pack" %>
<%= javascript_include_tag "jquery.fancybox-1.3.4.pack" %>
<% provide :title, "图片中心 | "+@album.name %>
<div id="body">
	<div class="inner_body">
		<%= render 'head_body' %>
		<div class="left_body">
			<div class="content">
				<p class="pic_list">
            <!-- 说明：下面的a标签href里面放的是大图的地址，title是图片说明，里面img标签放的是小图的地址 -->
          <% @photos.each do |pic| %>
          <a rel="example_group" href="<%= pic.photo_file.url(:index_big) %>" title="<%= pic.description %>">
            <img alt="" src="<%= pic.photo_file.url(:shetuan_logo) %>" width="115" />
          </a>
          <% end %>
	        <div class="page_box">
	          <%= paginate @photos %>
	        </div>
        </p>
			</div>
		</div>
		<%= render 'albums/right_body' %>
		<div class="Clear"></div>
	</div>
</div>
