<%= stylesheet_link_tag  "model", :media => "all" %>
<%= stylesheet_link_tag  "model_1", :media => "all" %>
<%= stylesheet_link_tag  "photo", :media => "all" %>
<% provide :title, "图片中心" %>
<div id="body">
	<div class="inner_body">
		<%= render 'head_body' %>
			<div class="left_body">
				<div class="content">
					<ul class="media_list">
						<% @albums.each do |album| %>
						<li>
							<%= link_to image_tag(album.photos.first.photo_file.url(:intro)), album_photos_path(album) if album.photos.exists? %>
							<div class="media_info">
								<p><%= link_to album.name, album_photos_path(album) %></p>
								<p class="counter"><%= album.photos.count %>张</p>
							</div>
						</li>
						<% end %>
						<div class="Clear"></div>
					</ul>
					<div class="Clear"></div>
				</div>
        <div class="page_box">
          <%= paginate @albums %>
        </div>
			</div>
		<%= render 'right_body' %>
		<div class="Clear"></div>
	</div>
</div>

